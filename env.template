# Trading Levels - Environment Variables Template
# Copy this file to .env.local for development or .env.production for production

# ======================
# Data Source
# ======================

# The application uses Yahoo Finance API (FREE, no API key required)
# Real futures data for ES, NQ, GC, CL and more
# No signup, no rate limits, no cost!

# ======================
# Application Settings
# ======================

# Node Environment (production, development, test)
NODE_ENV=production

# Next.js URL (for metadata and absolute URLs)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# ======================
# Optional: Rate Limiting
# ======================

# API rate limit (requests per minute per IP)
API_RATE_LIMIT=60

# ======================
# Optional: Monitoring & Analytics
# ======================

# Google Analytics Measurement ID (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn

# ======================
# Optional: Google AdSense
# ======================

# Google AdSense Publisher ID (Optional)
# Get from: https://www.google.com/adsense/
# Format: ca-pub-XXXXXXXXXXXXXXXX
# NEXT_PUBLIC_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX

# Google AdSense Ad Slot ID (Optional)
# Get from AdSense dashboard when you create an ad unit
# NEXT_PUBLIC_ADSENSE_SLOT=XXXXXXXXXX

# ======================
# Optional: Cache Settings
# ======================

# Cache duration in seconds (default: 300 = 5 minutes)
CACHE_DURATION=300

